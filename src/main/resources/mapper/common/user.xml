<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.erp.common.mapper.UserMapper">
	<resultMap type="User" id="UserMap">
	   <result column="username" property="username"/>
	   <result column="password" property="password"/>
	   <result column="role" property="role"/>
	   <result column="emp_no" property="empNo"/>
	   
	</resultMap>

	<insert id="register" parameterType="User">
			INSERT INTO user(username,password,role,emp_no)
			VALUES(#{username},#{password},#{role},#{empNo})
	</insert>
	
	<select id="login" parameterType="String" resultMap="UserMap">
		SELECT * FROM user
		WHERE username = #{username}
		
	</select>
	
	<select id="noCheck" parameterType="int" resultType="int">
		SELECT COUNT(*) FROM user
		WHERE emp_no = #{empNo}
		
	</select>
</mapper>