<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.erp.common.mapper.UserMapper">
	<resultMap type="User" id="UserMap">
	   <result column="username" property="username"/>
	   <result column="password" property="password"/>
	   <result column="role" property="role"/>
	   <result column="emp_no" property="empNo"/>
	   <result column="emp_name" property="empName"/>
	   <result column="dept_no" property="deptNo"/>
	   <result column="job_no" property="jobNo"/>
	   <result column="job_title" property="jobTitle"/>
	   <result column="dept_name" property="deptName"/>
	   
	</resultMap>

	<insert id="register" parameterType="User">
			INSERT INTO user(username,password,role,emp_no)
			VALUES(#{username},#{password},#{role},#{empNo})
	</insert>
	
	<select id="login" parameterType="String" resultMap="UserMap">
		SELECT job_no, dept_no, emp_no, username, password, role,  emp_name, dept_name, job_title 
		FROM user
		JOIN employee_info USING(emp_no)
		JOIN department USING(dept_no)
		JOIN job_position USING(job_no)
		WHERE username = #{username}
		
	</select>
	
	<select id="noCheck" parameterType="int" resultType="int">
		SELECT COUNT(*) FROM user
		WHERE emp_no = #{empNo}
		
	</select>
	
	<select id="idCheck" parameterType="User" resultType="int">
		SELECT COUNT(*) FROM user
		WHERE username = #{username}
		
	</select>
	
	<select id="findId" parameterType="int" resultType="String">
	    SELECT username FROM user WHERE emp_no = #{empNo};
	</select>
	
	<update id="resetMyPwd" parameterType="User">
		UPDATE user
		<set>
			password = #{password}
		</set>
		WHERE username = #{username}
	</update>
</mapper>