<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.erp.fm.mapper.PurchaseMapper">
	
	<resultMap id="PurchaseMap" type="Purchase">
		<id property="purchaseNo" column="purchase_no"/>
		<result property="unitPrice" column="unit_price"/>
		<result property="quantity" column="quantity"/>
		<result property="varAmount" column="var_amount"/>
		<result property="totalAmount" column="total_amount"/>
		<result property="purchaseDate" column="purchase_date"/>
		<result property="productNo" column="product_code"/>
	</resultMap>
	
	<select id="showPurchase" resultMap="PurchaseMap">
		SELECT * FROM purchase
	</select>
</mapper>