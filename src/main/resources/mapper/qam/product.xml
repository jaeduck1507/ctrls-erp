<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.erp.qam.mapper.ProductMapper">

<resultMap type="Product" id="ProductMap">
        <result column="product_no" property="productNo"/>
        <result column="production_date" property="productionDate" />
        <result column="product_code" property="productCode"/>
    </resultMap>
    
     <select id="showProduct" parameterType="Product" resultMap="ProductMap">
        SELECT * FROM product
     </select>

	<insert id="insertProduct" parameterType="Product">
		INSERT INTO product(production_date, product_code)
		VALUES (#{productionDate}, #{productCode})
	</insert>

	<update id="updateProduct" parameterType="Product">
		UPDATE product 
		SET production_date = #{productionDate},
			product_code = #{productCode}
		WHERE product_no = #{productNo}
	</update>

	<delete id="deleteProduct" parameterType="Product">
		DELETE FROM product
		WHERE product_no = #{productNo}
	</delete>
	
	

</mapper>